<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="570.0" prefWidth="800.0" style="-fx-background-color: #95CB72;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.controller.LoginController">

    <TextField fx:id="username" layoutX="290.0" layoutY="220.0" prefHeight="30.0" prefWidth="217.0"
               promptText="Username"
               style="-fx-background-color: #FFF; -fx-background-radius: 10; -fx-border-color: #000; -fx-border-radius: 10;">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <Label alignment="CENTER" layoutX="342.0" layoutY="124.0" prefHeight="53.0" prefWidth="113.0"
           style="-fx-border-color: #000;" text="Login">
        <font>
            <Font name="Gloucester MT Extra Condensed" size="33.0"/>
        </font>
    </Label>
    <TextField fx:id="password" layoutX="290.0" layoutY="269.0" prefHeight="30.0" prefWidth="217.0"
               promptText="Password"
               style="-fx-background-color: #FFF; -fx-background-radius: 10; -fx-border-color: #000; -fx-border-radius: 10;">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <Button fx:id="bt_login" layoutX="360.0" layoutY="376.0" mnemonicParsing="false" onAction="#login" prefHeight="34.0"
            prefWidth="78.0" text="Login">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <Button fx:id="bt_new_account" layoutX="311.0" layoutY="411.0" mnemonicParsing="false"
            onAction="#create_new_account" prefHeight="34.0" prefWidth="174.0" style="-fx-background-color: #95CB72;"
            text="Create new account ?" textFill="RED">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
    <RadioButton fx:id="rb_std" layoutX="296.0" layoutY="332.0" mnemonicParsing="false" text="Student"/>
    <RadioButton fx:id="rb_comp" layoutX="412.0" layoutY="332.0" mnemonicParsing="false" text="Company"/>
    <Button fx:id="get_password" layoutX="313.0" layoutY="302.0" mnemonicParsing="false" onAction="#get_password"
            prefHeight="9.0" prefWidth="174.0" style="-fx-background-color: #95CB72;" text="Forget my password"
            textFill="RED">
        <font>
            <Font size="14.0"/>
        </font>
    </Button>
</AnchorPane>
