<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane fx:id="root" prefHeight="570.0" prefWidth="800.0" style="-fx-background-color: #95CB72;"
            xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="sample.controller.NewAccountController">
    <TextField fx:id="tf_name" layoutX="32.0" layoutY="185.0" prefHeight="26.0" prefWidth="156.0" promptText="Name"
               style="-fx-background-color: #FFF; -fx-background-radius: 10; -fx-border-color: #000; -fx-border-radius: 10;">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <Label alignment="CENTER" layoutX="274.0" layoutY="28.0" prefHeight="49.0" prefWidth="248.0"
           style="-fx-border-color: #000;" text="Create new account">
        <font>
            <Font name="Gloucester MT Extra Condensed" size="33.0"/>
        </font>
    </Label>
    <ComboBox fx:id="comb_type_account" layoutX="32.0" layoutY="116.0" onAction="#EnterType" prefHeight="34.0"
              prefWidth="186.0" promptText="Type of account"/>
    <TextField fx:id="tf_email" layoutX="460.0" layoutY="185.0" prefHeight="26.0" prefWidth="156.0" promptText="Email"
               style="-fx-background-color: #FFF; -fx-background-radius: 10; -fx-border-color: #000; -fx-border-radius: 10;">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <TextField fx:id="tf_phone" layoutX="32.0" layoutY="304.0" prefHeight="26.0" prefWidth="156.0" promptText="Phone"
               style="-fx-background-color: #FFF; -fx-background-radius: 10; -fx-border-color: #000; -fx-border-radius: 10;">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <TextField fx:id="tf_major" layoutX="460.0" layoutY="360.0" prefHeight="26.0" prefWidth="156.0" promptText="major"
               style="-fx-background-color: #FFF; -fx-background-radius: 10; -fx-border-color: #000; -fx-border-radius: 10;">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <TextField fx:id="tf_username" layoutX="32.0" layoutY="248.0" prefHeight="26.0" prefWidth="156.0"
               promptText="Username"
               style="-fx-background-color: #FFF; -fx-background-radius: 10; -fx-border-color: #000; -fx-border-radius: 10;">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <TextField fx:id="tf_password" layoutX="460.0" layoutY="248.0" prefHeight="26.0" prefWidth="156.0"
               promptText="Password"
               style="-fx-background-color: #FFF; -fx-background-radius: 10; -fx-border-color: #000; -fx-border-radius: 10;">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <Label fx:id="label_birthday" layoutX="32.0" layoutY="360.0" prefHeight="34.0" prefWidth="95.0" text="Birthday">
        <font>
            <Font size="17.0"/>
        </font>
    </Label>
    <ComboBox fx:id="comb_year" editable="true" layoutX="133.0" layoutY="364.0" prefHeight="22.0" prefWidth="72.0"
              promptText="Year"/>
    <ComboBox fx:id="comb_month" editable="true" layoutX="218.0" layoutY="364.0" prefHeight="22.0" prefWidth="72.0"
              promptText="Month"/>
    <ComboBox fx:id="comb_day" editable="true" layoutX="304.0" layoutY="364.0" prefHeight="22.0" prefWidth="72.0"
              promptText="Day"/>
    <TextField fx:id="tf_desc" alignment="TOP_LEFT" layoutX="28.0" layoutY="364.0" prefHeight="90.0" prefWidth="594.0"
               promptText="Description"
               style="-fx-background-color: #FFF; -fx-background-radius: 10; -fx-border-color: #000; -fx-border-radius: 10;"
               visible="false">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <Button fx:id="bt_add_image" layoutX="32.0" layoutY="467.0" mnemonicParsing="false" text="Add Image"
            visible="false"/>
    <TextField fx:id="tf_image" layoutX="127.0" layoutY="463.0" prefHeight="26.0" prefWidth="156.0" promptText="Image"
               style="-fx-background-color: #FFF; -fx-background-radius: 10; -fx-border-color: #000; -fx-border-radius: 10;"
               visible="false">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>
    <Button layoutX="400.0" layoutY="518.0" mnemonicParsing="false" onAction="#saveData" prefHeight="14.0"
            prefWidth="87.0" style="-fx-background-radius: 8;" text="Save">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>
    <Button layoutX="296.0" layoutY="518.0" mnemonicParsing="false" onAction="#Back" prefHeight="14.0" prefWidth="87.0"
            style="-fx-background-radius: 8;" text="Back" textFill="RED">
        <font>
            <Font size="16.0"/>
        </font>
    </Button>
    <ComboBox fx:id="comb_type" editable="true" layoutX="460.0" layoutY="303.0" onAction="#EnterType" prefHeight="34.0"
              prefWidth="156.0" promptText="Type"/>
    <TextField fx:id="tf_skill" alignment="TOP_LEFT" layoutX="28.0" layoutY="420.0" prefHeight="67.0" prefWidth="346.0"
               promptText="Your skills"
               style="-fx-background-color: #FFF; -fx-background-radius: 10; -fx-border-color: #000; -fx-border-radius: 10;">
        <font>
            <Font size="15.0"/>
        </font>
    </TextField>

</AnchorPane>
